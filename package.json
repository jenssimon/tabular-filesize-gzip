{
  "name": "tabular-filesize-gzip",
  "version": "0.0.0-development",
  "description": "Show file sizes tabular including Gzip sizes",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/jenssimon/tabular-filesize-gzip"
  },
  "author": "Jens Simon <jens.simon80@googlemail.com>",
  "license": "MIT",
  "scripts": {
    "lint": "eslint ./",
    "build": "tsc",
    "prepare": "npm-run-all build",
    "commit": "cz",
    "postinstall": "husky install",
    "prepack": "pinst --disable",
    "postpack": "pinst --enable",
    "semantic-release": "semantic-release"
  },
  "keywords": [
    "file",
    "size",
    "filesize",
    "gzip",
    "table"
  ],
  "dependencies": {
    "chalk": "^4.1.2",
    "filesize": "^9.0.11",
    "glob": "^8.1.0",
    "gzip-size": "^6.0.0",
    "table": "^6.8.1"
  },
  "devDependencies": {
    "@commitlint/cli": "18.6.0",
    "@commitlint/config-conventional": "18.6.0",
    "@jenssimon/eslint-config-base": "7.3.17",
    "@jenssimon/eslint-config-typescript": "5.2.18",
    "@types/glob": "8.1.0",
    "@types/node": "20.11.6",
    "commitizen": "4.3.0",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.56.0",
    "husky": "9.0.6",
    "lint-staged": "15.2.0",
    "npm-run-all": "4.1.5",
    "pinst": "3.0.0",
    "semantic-release": "23.0.0",
    "typescript": "5.3.3"
  },
  "eslintConfig": {
    "extends": [
      "@jenssimon/base",
      "@jenssimon/typescript"
    ],
    "parserOptions": {
      "project": "./tsconfig.json"
    }
  },
  "packageManager": "yarn@4.0.2",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "**/*.{js,ts}": "eslint"
  },
  "release": {
    "branches": [
      "main"
    ]
  }
}
