{
  "name": "tabular-filesize-gzip",
  "version": "0.0.0-development",
  "description": "Show file sizes tabular including Gzip sizes",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/jenssimon/tabular-filesize-gzip"
  },
  "author": "Jens Simon <jens.simon80@googlemail.com>",
  "license": "MIT",
  "scripts": {
    "lint": "eslint --fix ./",
    "build": "tsc",
    "prepare": "npm-run-all build",
    "ci-test": "run-s \"ci-test:*\"",
    "ci-test:lint": "eslint --ext .tsx,.ts,.jsx,.js ./",
    "ci-test:tsc": "tsc --noEmit",
    "commit": "cz",
    "postinstall": "husky install",
    "prepack": "pinst --disable",
    "postpack": "pinst --enable",
    "semantic-release": "semantic-release"
  },
  "keywords": [
    "file",
    "size",
    "filesize",
    "gzip",
    "table"
  ],
  "dependencies": {
    "chalk": "^4.1.2",
    "filesize": "^9.0.11",
    "glob": "^8.0.3",
    "gzip-size": "^6.0.0",
    "table": "^6.8.0"
  },
  "devDependencies": {
    "@commitlint/cli": "17.3.0",
    "@commitlint/config-conventional": "17.3.0",
    "@jenssimon/eslint-config-base": "6.4.7",
    "@jenssimon/eslint-config-typescript": "3.6.12",
    "@types/glob": "8.0.0",
    "@types/node": "18.11.9",
    "commitizen": "4.2.5",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.28.0",
    "husky": "8.0.2",
    "lint-staged": "13.0.3",
    "npm-run-all": "4.1.5",
    "pinst": "3.0.0",
    "semantic-release": "19.0.5",
    "typescript": "4.9.3"
  },
  "eslintConfig": {
    "extends": [
      "@jenssimon/base",
      "@jenssimon/typescript"
    ],
    "parserOptions": {
      "project": "./tsconfig.json"
    }
  },
  "packageManager": "yarn@3.3.0",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "**/*.{js,ts}": "eslint"
  },
  "release": {
    "branches": [
      "main"
    ]
  }
}
